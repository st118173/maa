<body>
<div class="container">
  <div class="row main">
    <div class="main-login main-center">
      <h5>Enter your details for ID card</h5>
      <%= form_for @memberdetail, html: { multipart: true } do |f| %>

        <div class="form-group">
          <label for="name" class="cols-sm-2 control-label">Your Name</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
              <!--<input type="text" class="form-control" name="name" id="name"  placeholder="Enter your Name"/>-->
              <%= f.text_field :fullname,class:"form-control"  , placeholder:"Enter your Full Name" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="fullname" class="cols-sm-2 control-label">Father Name</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
              <!--<input type="text" class="form-control" name="email" id="email"  placeholder="Enter your father name"/>-->
              <%= f.text_field :fathername,class:"form-control"  , placeholder:"Enter your Father Name" %>

            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="username" class="cols-sm-2 control-label">Contact Number</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
              <!--<input type="text" class="form-control" name="username" id="username"  placeholder="Enter your Username"/>-->
              <%= f.text_field :phnumber,class:"form-control" , placeholder:"Enter mobile number with country code" %>
              <%#= f.text_field :phnumber, class: 'form-control', autofocus: true, placeholder: 'xxx-xxx-xxxx', value: number_to_phone(@my_variable.telephone, area_code: true, extension: 555) %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="password" class="cols-sm-2 control-label">Blood group</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <!--<input type="password" class="form-control" name="password" id="password"  placeholder="Enter your Password"/>-->
              <div id="two_select">
              <%#= f.select  :bloodgroup ,options_from_collection_for_select(@people, "id", "name")  %>
                <%#= f.select(:bloodgroup) %>
                <%#= select(:bloodgroup, [['Lisbon', 1], ['Madrid', 2]]) %>
                <%= f.select :bloodgroup, [["Select Blood group", "nil"],
                                           [ "A RhD positive (A+)", "A+"],
                                           [ "A RhD negative (A-)", "A-"],
                                           ["B RhD positive (B+)",  "B+"],
                                           ["B RhD negative (B-)",  "B-"],
                                           ["O RhD positive (O+)",  "O+"],
                                           ["O RhD negative (O-)",  "O-"],
                                           ["AB RhD positive (AB+)","AB+"],
                                           ["AB RhD negative (AB-)","AB-"]], {}, { 'data-width' => "100%", :class => "selectpicker", id: 'sel'} %>

                <!--<select class="selectpicker" data-width="100px"   style="background-color: black;font-size: 250%"  onchange="validate_select()" data-live-search="true" id="dropone" size="1">-->
                    <!--<option value="" style="font-size: 150%">Select Blood group</option>-->
                    <!--<option value="a" style="font-size: 150%">A RhD positive (A+)</option>-->
                    <!--<option value="b" style="font-size: 150%">A RhD negative (A-)</option>-->
                    <!--<option value="c" style="font-size: 150%">B RhD positive (B+)</option>-->
                    <!--<option value="c" style="font-size: 150%">B RhD negative (B-)</option>-->
                    <!--<option value="c" style="font-size: 150%">O RhD positive (O+)</option>-->
                    <!--<option value="c" style="font-size: 150%">O RhD negative (O-)</option>-->
                    <!--<option value="c" style="font-size: 150%">AB RhD positive (AB+)</option>-->
                    <!--<option value="c" style="font-size: 150%">AB RhD negative (AB-)</option>-->
                  <!--</select>-->

                <script>
                  $('.selectpicker').selectpicker({
                    style: 'btn-info',
                    size: 5
                  });
                </script>
                <br>
              </div>

            </div>
          </div>
        </div>
          <p>
            <%= f.label 'Insert Latest Image'%>
            <%= f.file_field :image,label: 'Upload Attachment',class:"btn btn-small btn-primary btn-inverse" %>
          </p>

        <div class="form-group ">
          <!--<a href="http://deepak646.blogspot.in" target="_blank" type="button" id="button" class="btn btn-primary btn-lg btn-block login-button">Register</a>-->
          <%= f.button :submit , class:"btn btn-primary btn-lg btn-block login-button", id: 'register' %>
        </div>

      <% end %>
    </div>
  </div>
</div>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
